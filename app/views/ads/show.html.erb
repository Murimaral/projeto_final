<% if user_signed_in? %>
<div>
<%if current_user.colaborator.present? %>
<p><%= "Olá, #{current_user.colaborator.social_name}"%></p>
<p><%= link_to 'Meu perfil', colaborator_path(current_user.colaborator.id)%></p>
<%end%>
<%= link_to 'Sair', destroy_user_session_path, method: :delete %>
</div>
<%end%>


<div>
<h3><%= @ad.name %></h3>
<dl>
<dt>Categoria:</dt>
<dd><%=@ad.category%></dd>
<dt>Informações:</dt>
<dd><%=@ad.description%></dd>
<dt>Valor:</dt>
<dd><%=number_to_currency @ad.cost %></dd>
</dl>
</div>
<% if current_user.id == @ad.colaborator.user.id %>

<%= link_to 'Editar anúncio', edit_ad_path(@ad)%>
<%= link_to 'Apagar anúncio', ad_path(@ad), method: :delete, data: {
    confirm: 'Gostaria de apagar este anúncio?'} %>
<% if !@deals.empty? %>
<%@deals.each do |deal|%>
<p><%=link_to "Solicitação de #{deal.colaborator.social_name}", edit_ad_deal_path(@ad, deal)%></p>
<%end%>>
<%end%>
<% else %>

<% if @deal.nil? %>
<%=link_to 'Quero comprar esse produto', new_ad_deal_path(@ad)%>
<%elsif !@deal.freight.blank? || !@deal.discount.blank?%>
<%=link_to 'Proposta de acordo', ad_deal_path(@ad, @deal) %>
<%end%>
<%end%>
  


<div>
<%= link_to 'Perguntas sobre o produto', ad_questions_path(@ad) %>    
</div>
<div>
<%= link_to 'Continuar navegando', ads_path %>
</div>

