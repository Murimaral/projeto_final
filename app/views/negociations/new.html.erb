<h3> Envie sua proposta ao vendedor!</h3>

<% if @negociation.errors.any? %>
<% @negociation.errors.full_messages.each do |e| %>
<p><%= e %></p>
<%end%>
<%end%>
<%= form_with model: [@ad, @negociation], local: true do |f| %>
<div>
<dl>
<dt><%= f.label :ask, 'Proposta' %></dt>
<dd><%= f.text_field :ask %></dd>
</div>
<div>
<%= f.submit 'Enviar proposta' %>
</div>
<%end%>

